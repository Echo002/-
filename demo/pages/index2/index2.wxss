page{
  font: 14px "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, STHeiti;
  line-height: 1.5;
  background-color: #F6F6F6;
}

.block{
  height: 20px
}
.input{
  -webkit-text-fill-color: red;
  font-size: 13
}

.user {
    display:flex;
    flex-direction:row;
    padding:5px 15px;
    background-repeat:no-repeat;
    background-size:100%;
    background-color: #4abdcc;
}
.func {
  display:flex;
  flex-direction: column;
}
.item {
  display:flex;
  flex-direction:row;
  margin-bottom:15px;
  position:relative;
  background-color:white;
  padding:10px 15px;
  font-size:17px;
}
.item-image {
  width:20px;
  height:20px;
}
.right-image {
  width:20px;
  height:20px;
  position:absolute;
  right:10px;
}
.item-name {
  margin-left: 15px;
  line-height:25px;
  margin-top:-3px;
}
.icon {
    width:50px;
    height:50px;
    border-radius:50%;
}
.name {
    margin-left:20px;
    font-size:15px;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    line-height:51px;
    color:white;
}