.container-this {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
} 
view{
	width:100%;
	overflow:hidden;
}
.banner{
	width:100%;
	position:relative;
}
.item-banner{
	display:block;
	width:100%;
}
.audio{
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-40rpx;
	margin-left:-40rpx;
}
.audio image{
	width:80rpx;
	height:80rpx;
}
.title{
	display:inline-block;
	text-align:center;
	font-size:36rpx;
	margin:60rpx 0 30rpx 0;
	padding:12rpx 0;
	font-weight:bold;
	z-index:2;
	position:relative;
	text-indent:27rpx;
}
.detail_bg{
	position:absolute;
	height:66rpx;
	width:440rpx;
	top:66rpx;
	left:50%;
	margin-left:-220rpx;
	z-index:1;
}
.title-view{
	position:relative;
	text-align:center;
}
.mo{
	position:relative;
	width:54rpx;
	height:54rpx;
	top:-18rpx;
	right:-4rpx;
	z-index:3;
}
.content,.intro{
	text-indent:2em;
	font-size:28rpx;
	line-height:48rpx;
	padding:0 20rpx;
  display: inline-block;
  word-break: break-all
}
.line{
	width:100%;
	height:30rpx;
	margin:40rpx 0;
}
.intro{
	text-indent:0;
}
.logo{
	width:222rpx;
	height:222rpx;
	display:block;
	margin:60rpx auto;
}